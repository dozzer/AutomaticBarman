<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/motorName"
        style="@style/TextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="motorName" />

    <TextView
        android:id="@+id/motorPin"
        style="@style/TextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/motorName"
        tools:text="motorPin" />

    <TextView
        android:id="@+id/motorSpeed"
        style="@style/TextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/motorPin"
        tools:text="motorSpeed" />

    <ImageButton
        android:id="@+id/btnDelete"
        style="@style/square_small_button"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete" />

    <!--<ImageButton-->
    <!--andrmotorIdd:idmotorgpioId@+id/btnEdit"-->
    <!--style="@style/square_small_button"-->
    <!--android:layout_marginEnd="16dp"-->
    <!--app:layout_constraintBottom_toBottomOf="parent"-->
    <!--app:layout_constraintEnd_toStartOfmotorgpioId@+id/btnDelete"-->
    <!--app:layout_constraintTop_toTopOf="parent"-->
    <!--app:srcCompat="@drawable/ic_edit" />-->

    <TextView
        android:id="@+id/textView4"
        style="@style/TextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Name"
        app:layout_constraintBaseline_toBaselineOf="@+id/motorName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        style="@style/TextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Speed"
        app:layout_constraintBaseline_toBaselineOf="@+id/motorSpeed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        style="@style/TextView"
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Pin"
        app:layout_constraintBaseline_toBaselineOf="@+id/motorPin"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>