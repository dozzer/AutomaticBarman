    <style name="TextView">
        <item name="android:color">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:minEms">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="fontPath">@string/font_regular</item>-->
        <!--<item name="android:inputType">text|textCapSentences</item>-->
    </style>

    <style name="EditText" parent="TextView">
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:minEms">1</item>
        <item name="android:inputType">text|textCapSentences</item>
    </style>

    <style name="EditText.Dialog" parent="@style/Widget.AppCompat.EditText">
        <!--<item name="android:textColor">@color/colorWhite</item>-->
        <!--<item name="android:textColorHint">@color/colorWhiteWithOpacity50</item>-->
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingEnd">@dimen/margin_normal</item>
        <item name="android:paddingStart">@dimen/margin_normal</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
    </style>

    <style name="square_small_button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <!--<item name="android:background">@null</item>-->
    </style>
    <style name="square_middle_button">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
    </style>

    <dimen name="text_size_normal">16sp</dimen>
    <dimen name="margin_normal">16dp</dimen>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

