<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button">
        <item name="android:color">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="square_button" parent="button">
        <item name="android:layout_height">@dimen/square_size</item>
        <item name="android:layout_width">@dimen/square_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="square_small_button" parent="button">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
        <!--<item name="android:background">@null</item>-->
    </style>
    <style name="square_middle_button" parent="button">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="TextView">
        <item name="android:color">@color/textColor</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:minEms">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditText" parent="TextView">
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:minEms">1</item>
        <item name="android:inputType">text|textCapSentences</item>
    </style>

    <style name="EditText.Dialog" parent="@style/Widget.AppCompat.EditText">
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingEnd">@dimen/margin_normal</item>
        <item name="android:paddingStart">@dimen/margin_normal</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="button.delete" parent="square_small_button">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ic_delete</item>
        <item name="android:contentDescription">@string/delete</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="button.edit" parent="square_small_button">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:contentDescription">@string/edit</item>
        <item name="android:src">@drawable/ic_edit</item>
        <item name="android:background">@null</item>
    </style>

</resources>